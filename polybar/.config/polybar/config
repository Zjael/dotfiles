[colors]
background = #3a3c61
foreground = #678bdc
linecolor = #bc92f8
bordercolor = #555

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0 

[bar/main]
enable-ipc = true
; monitor = ${env:MONITOR:eDP1}
width = 100%
height = 20
offset-x = 0
offset-y = 0
bottom = true
fixed-center = true
radius = 0.0
spacing = 0
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

overline-size = 2
overline-color = ${colors.linecolor}
underline-size = 2
underline-color = ${colors.linecolor}

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = lucy tewii:size=11;2
font-1 = Wuncon Siji:size=12;2

modules-left = i3
modules-center = date
modules-right = pkg wifi battery volume powermenu

tray-position = right
tray-padding = 1
;tray-transparent = true
tray-detached = false
tray-background = ${colors.background}

;wm-restack = i3
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-scroll = false

format = <label-state>
label-focused-padding = 1
label-focused-foreground = #e4b226
label-unfocused-padding = 1
label-unfocused-foreground = #4ddbe6ec
label-urgent-padding = 1
label-urgent-foreground = #dc322f
label-urgent-underline = #ffffc83f
label-visible-padding = 1
label-visible-foreground = #4ddbe6ec
ws-icon-0 = TERM;
ws-icon-1 = SURF;
ws-icon-2 = EDIT;
ws-icon-3 = GAME;
ws-icon-4 = 5;
ws-icon-5 = 6;

[module/date]
type = internal/date
date = %Y-%m-%d,
time = %H:%M
interval = 5
format = <label>
format-padding = 2
label = " %date% %time%"
format-foreground = #678bdc
click-left = ~/dotfiles/scripts/reload.sh

[module/volume]
type = internal/volume
mapping = true
format-padding = 1
format-volume = <ramp-volume>
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-headphones-0 = 
ramp-headphones-1 = 
format-volume-foreground = #ffbc69

label-muted = 
format-muted-foreground = #dc322f

[module/temperature]
type = custom/script
interval = 1
exec-if = sensors
exec = ~/dotfiles/scripts/panel/temperature.sh

[module/pkg]
type = custom/script
interval = 1200
exec = ~/dotfiles/scripts/panel/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/wifi]
type = custom/script
interval = 5
exec = ~/dotfiles/scripts/panel/network.sh

[module/bluetooth]
type = custom/script
interval = 5
exec = ~/dotfiles/scripts/panel/bluetooth.sh

[module/battery]
type = custom/script
if_exec = ~/dotfiles/scripts/panel/battery
click-left = ~/dotfiles/scripts/pop-up/bat.sh

[module/powermenu]
type = custom/script
exec = echo "%{F#dc322f}"
click-left = ~/dotfiles/scripts/menu/power.sh
format-padding = 1