[global/wm]
margin-top = 0
margin-bottom = 0 
override-redirect = true

[colors]
background = #000
foreground = #fff


[bar/main]
; monitor = eDP1
; monitor-fallback = eDP1

locale = da_DK.UTF-8
background = #3a3c61
foreground = #678bdc

font-0 = lucy tewii:size=12;2:antialias=false
font-1 = FontAwesome:size=12;3:antialias=false

width = 100%
height = 24
offset-x = 0
offset-y = 0
bottom = true
fixed-center = true
radius = 0
spacing = 1
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1

overline-size = 2
overline-color = #bc92f8
underline-size = 2
underline-color = #bc92f8

modules-left = date
modules-center = reload
modules-right = battery volume powermenu

tray-position = left
tray-padding = 1
tray-transparent = false
tray-detached = false
tray-background = #3a3c61

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
format = <label-state>

label-focused =     
label-focused-foreground = #678bdc
label-focused-background = #00eeeeee
label-focused-padding = 1

label-unfocused =    
label-unfocused-foreground = #678bdc
label-unfocused-background = #00eeeeee
label-unfocused-padding = 1

label-urgent =   
label-urgent-foreground = #678bdc
label-urgent-background = #00eeeeee 
label-urgent-padding = 1

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-default = 

[module/date]
type = internal/date
interval = 1
date = " %I:%M"
format-prefix = 

[module/reload]
type = custom/script
format-text = <label>
label = 
exec = echo label
click-left = ~/dotfiles/scripts/polybar/reload.sh
format-foreground = #678bdc

[module/volume]
type = internal/volume

format-volume = <ramp-volume><label-volume> 
module-margin-right = 0

ramp-volume-0 = 
ramp-volume-1 = 

format-volume-foreground = #ffbc69
format-volume-background = #3a3c61

label-muted =  muted

[module/bluetooth]
type = custom/script
interval = 5
if_exec = ~/dotfiles/scripts/polybar/bluetooth.sh

[module/battery]
type = custom/script
if_exec = ~/dotfiles/scripts/polybar/battery
click-left = ~/dotfiles/scripts/polybar/pop-up/bat.sh

[module/powermenu]
type = custom/script
format-text = <label>
label = 
exec = echo label
click-left = ~/dotfiles/scripts/polybar/power.sh
format-foreground = #e60053