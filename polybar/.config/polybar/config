[colors]
background = #3a3c61
foreground = #678bdc
linecolor = #bc92f8
bordercolor = #555
accent = #e60053

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0 

[bar/main]
enable-ipc = true
; monitor = ${env:MONITOR:eDP1}
width = 100%
height = 24
offset-x = 0
offset-y = 0
bottom = true
fixed-center = true
radius = 0
spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

overline-size = 2
overline-color = ${colors.linecolor}
underline-size = 2
underline-color = ${colors.linecolor}

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = lucy tewii:size=12;2:antialias=false
; font-0 = Gohu GohuFont:size=11;2:antialias=false
font-1 = Wuncon Siji:size=16;2:antialias=false
; font-2 = FontAwesome:size=12;3:antialias=false

modules-left = i3
modules-center = xwindow
modules-right = wifi bluetooth battery volume date powermenu

tray-position = left
tray-padding = 1
tray-transparent = false
tray-detached = false
tray-background = ${colors.background}

[module/i3]
type = internal/i3
label-focused-padding = 2
label-unfocused-padding = 2
label-unfocused-foreground = #4ddbe6ec
label-urgent-padding = 2
label-urgent-underline = #ffffc83f
label-visible-padding = 2
label-visible-foreground = #4ddbe6ec
pin-workspaces = true
ws-icon-0 = TERM;
ws-icon-1 = SURF;
ws-icon-2 = EDIT;
ws-icon-3 = GAME;
ws-icon-4 = 5;
ws-icon-5 = 6;

[module/xwindow]
type = internal/xwindow
label-maxlen = 40

[module/date]
type = internal/date
date = %Y-%m-%d
time = %H:%M
interval = 5
format-padding = 2
label = "%time%"
format-foreground = #678bdc

[module/reload]
type = custom/script
format-text = <label>
label = 
exec = echo label
click-left = ~/dotfiles/scripts/reload.sh
format-foreground = #678bdc

[module/volume]
type = internal/volume
mapping = true
format-volume = <ramp-volume>
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-headphones-0 = 
ramp-headphones-1 = 
format-volume-foreground = #ffbc69

label-muted = 
format-muted-foreground = #dc322f

[module/pkg]
type = custom/script
interval = 1200
format = <label>
format-underline = #dc322f
label = "%output:0:30%"
exec = ~/dotfiles/scripts/panel/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/wifi]
type = custom/script
if_exec = ~/dotfiles/scripts/panel/network.sh
interval = 5

[module/bluetooth]
type = custom/script
interval = 5
if_exec = ~/dotfiles/scripts/panel/bluetooth.sh

[module/battery]
type = custom/script
if_exec = ~/dotfiles/scripts/panel/battery
click-left = ~/dotfiles/scripts/pop-up/bat.sh

[module/powermenu]
type = custom/script
exec = echo %{F#dc322f}""
click-left = ~/dotfiles/scripts/menu/power.sh
format-padding = 1